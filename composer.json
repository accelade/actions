{
    "name": "accelade/actions",
    "description": "Action buttons and modals for Accelade - Filament-style actions with Blade templates",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io",
            "homepage": "https://3x1.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/accelade/actions",
    "keywords": [
        "laravel",
        "blade",
        "accelade",
        "actions",
        "buttons",
        "modals",
        "confirmation"
    ],
    "require": {
        "php": "^8.2",
        "accelade/accelade": "^1.0.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "laravel/serializable-closure": "^1.0|^2.0"
    },
    "require-dev": {
        "blade-ui-kit/blade-heroicons": "^2.6",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\Actions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\Actions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\Actions\\ActionsServiceProvider"
            ],
            "aliases": {
                "Action": "Accelade\\Actions\\Facades\\Action"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "format": "pint",
        "format:test": "pint --test",
        "mago": "./mago lint src/ || mago lint src/",
        "mago:fix": "./mago lint src/ --fix || mago lint src/ --fix",
        "analyse": [
            "@format:test",
            "@mago"
        ],
        "ci": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "v1.0.0"
}